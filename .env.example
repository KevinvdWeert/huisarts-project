# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Database Configuration
DB_HOST=localhost
DB_NAME=huisarts
DB_USER=huisarts_app
DB_PASS=your_secure_database_password_here

# Security Configuration
# Generate using: php -r "echo base64_encode(openssl_random_pseudo_bytes(32)) . PHP_EOL;"
ENCRYPTION_KEY=your_generated_encryption_key_here

# Site Configuration
SITE_URL=https://yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# Session Configuration (seconds)
SESSION_LIFETIME=3600

# Environment (development, staging, production)
APP_ENV=production

# Error Reporting (1 for development, 0 for production)
DISPLAY_ERRORS=0

# HTTPS Enforcement (1 to force HTTPS)
FORCE_HTTPS=1
